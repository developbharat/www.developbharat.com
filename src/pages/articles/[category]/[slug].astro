---
import FormattedDate from "@components/FormattedDate.astro";
import MainWebsite from "@layouts/MainWebsite.astro";
import { parseArticleId } from "@utils/articles";
import { Image } from "astro:assets";
import { type CollectionEntry, getCollection, render } from "astro:content";
import { changeLanguage } from "i18next";

changeLanguage("hi");

export async function getStaticPaths() {
    const posts = await getCollection("articles");
    return posts.map((post) => ({
        params: {
            slug: parseArticleId(post.id).slug,
            category: parseArticleId(post.id).category,
        },
        props: post,
    }));
}
type Props = CollectionEntry<"articles">;
const post = Astro.props;
const { Content } = await render(post);
const { title, description, pubDate, updatedDate, heroImage } = post.data;
---

<MainWebsite title={title} description={description}>
    <main>
        <article>
            <div class="hero-image">
                {
                    heroImage && (
                        <Image
                            width={1020}
                            height={510}
                            src={heroImage}
                            alt=""
                        />
                    )
                }
            </div>
            <div class="prose">
                <div class="title">
                    <div class="date">
                        <FormattedDate date={pubDate} />
                        {
                            updatedDate && (
                                <div class="last-updated-on">
                                    Last updated on{" "}
                                    <FormattedDate date={updatedDate} />
                                </div>
                            )
                        }
                    </div>
                    <h1>{title}</h1>
                    <hr />
                </div>
                <Content />
            </div>
        </article>
    </main>
</MainWebsite>
