---
import { Image } from "astro:assets";
import MainWebsite from "@layouts/MainWebsite.astro";
import i404 from "@assets/illustrations/404.png";
import { useTranslatePath, useT } from "@utils/i18n";
import { getLocale } from "astro-i18n-aut";

const locale = getLocale(Astro.url);
const t = await useT(locale);
const translatePath = useTranslatePath(locale);
---

<MainWebsite title={t.notfound.title} description={t.notfound.description}>
    <section class="py-32">
        <div class="container mx-auto px-4">
            <div class="flex flex-col lg:flex-row gap-8 items-center">
                <div class="lg:pr-8 w-1/2">
                    <Image src={i404} alt="Page Not Found" />
                </div>
                <div class="lg:pl-8 lg:w-1/2">
                    <h1
                        class="text-9xl text-neutral-950 dark:text-neutral-dark-950 font-bold mb-2"
                    >
                        404
                    </h1>
                    <h6
                        class="text-5xl text-neutral-950 dark:text-neutral-dark-950 font-bold mb-2"
                    >
                        {t.notfound.hero.title}
                    </h6>
                    <p
                        class="text-lg text-neutral-700 dark:text-neutral-dark-700 font-normal mb-12"
                    >
                        {t.notfound.hero.description}
                    </p>

                    <div class="relative mb-8 lg:max-w-[400px]">
                        <div
                            class="flex-col justify-start items-start gap-3 inline-flex"
                        >
                            <div
                                class="text-neutral-950 dark:text-neutral-dark-950 text-base font-bold"
                            >
                                {t.notfound.suggestions.label}
                            </div>
                            <div class="flex flex-wrap gap-4">
                                <a href={translatePath("/products/hindmail")}
                                    >{t.notfound.suggestions.hindmail}</a
                                >
                                <a href={translatePath("/products/uistudio")}
                                    >{t.notfound.suggestions.uistudio}</a
                                >
                                <a href={translatePath("/products/torrenthub")}
                                    >{t.notfound.suggestions.torrenthub}</a
                                >
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</MainWebsite>
